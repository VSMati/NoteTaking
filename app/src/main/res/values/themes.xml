<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteTaking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Purple.Button</item>
    </style>
    
    <style name="Turquoise" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_secondary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <item name="buttonStyle">@style/Turquoise.Button</item>
    </style>


    <style name="Theme.NoteTaking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListLayout_purple">
        <item name="android:background">@drawable/note_bg</item>
    </style>

    <style name="ListLayout_turquoise">
        <item name="android:background">@drawable/note_bg_turquoise</item>
    </style>

    <style name="Turquoise.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Purple.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.NoteTaking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteTaking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>